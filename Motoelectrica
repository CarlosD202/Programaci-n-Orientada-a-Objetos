package proyectodepoo;

/**
 *
 * @author Carlos
 */
public class Motoelectrica extends Motocicleta{
    private String tipodecargador;
    
    public Motoelectrica(String marca, String color, String modelo, double velocidad, String tipodecargador) {
        super(marca,color,modelo,velocidad);
        this.tipodecargador = tipodecargador;
    }
    
    public String gettipodecargador(){
        return tipodecargador;
    }
    
    public String settipodecargador(){
        return tipodecargador;
    }
    //Sobreescribimos el metodo
    @Override
    public String mostrarDatos(){
        return "Marca: "+marca+"\nColor: "+color+"\nModelo: "+modelo+"\nVelocidad:"+velocidad+
                "\nTipo de cargador: "+tipodecargador;
      }
}
        

